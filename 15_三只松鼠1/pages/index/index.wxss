.page {
    display: flex;
}

.sidebar {
    width: 80px;
    background-color: #ccc;
}

.page .sidebar .lm {
    height: 30px;
    line-height: 30px;
    text-align: center;
    font-size: 14px;
}

.page .sidebar .lm.cur {
    background-color: white;
    border-left: 3px orange solid;
}

.maincontent {
    flex: 1;
    padding-left: 10px;
    background-color: #eee;
}

.the_temp .title {
    font-size: 18px;
    line-height: 40px;
    height: 40px;
    text-align: center;
    font-weight: bold;
    text-shadow: 1px 1px 1px rgba(0, 0, 0, .4);
}

.p_box {
    display: flex;
    border: 1px solid #ccc;
    margin: 10px;
    margin-left: 0px;
    border-radius: 10px;
    padding: 6px;
}


.p_box .picbox {
    flex: 1;
}

.p_box .wordbox {
    flex: 1;
    text-align: right;
}

.p_box .picbox image {
    width: 110px;
    height: 110px;
}