.page-container {
  display: flex;
  font-size: 14px;
}

.page-container .slidebar {
  width: 80px;
  background: #eee;
}

.page-container .slidebar .lm {
  height: 30px;
  line-height: 30px;
  text-align: center;
  font-size: 14px;
  border-left: 3px solid transparent;
}

.page-container .slidebar .lm.cur {
  background-color: white;
  border-left: 3px solid orange;
}

.page-container .maincontent {
  flex: 1;
  padding-left: 10px;
}

.the_temp .bt {
  font-size: 16px;
  color: #f38;
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-weight: bold;
  text-shadow: 1px 1px 1px rgba(201, 199, 199, 0.4);
}

.the_temp .p_box {
  width: 95%;
  display: flex;
  box-shadow: 0px 0px 5px rgba(48, 48, 48, 0.125);
  margin-bottom: 10px;
  border-radius: 4px;
  height: 110px;
  overflow: hidden;
  padding: 5px;
  box-sizing: border-box;
}

.the_temp .p_box .picbox image {
  width: 100px;
  height: 100px;
}

.the_temp .p_box .wordbox {
  flex: 1;
  font-weight: bold;
  padding-right: 10px;
  padding-left: 10px;
  font-size: 10px;
}
