.topbox {
  height: 40px;
  border-bottom: 1px solid #ccc;
}

.topbox .row {
  height: 40px;
  padding-top: 10px;
  overflow: hidden;
}

.topbox .row .sx_btn {
  float: right;
  border: 1px solid #ccc;
  font-size: 14px;
  border-radius: 4px;
  color: #aaa;
  width: 110rpx;
  margin-right: 10rpx;
  text-align: center;
  box-sizing: border-box;
  height: 26px;
  line-height: 26px;
}

.unit {
  width: 600px;
  height: 40px;
  padding-left: 10px;
}

.unit .xxk {
  float: left;
  padding: 4px 14px;
  padding-right: 20px;
  background: #eee url(data:image/png;base64,);
  background-size: 10px 10px;
  background-repeat: no-repeat;
  background-position: 94% center;
  margin-right: 10px;
  font-size: 12px;
  position: relative;
}

.unit .xxk.cur {
  background-color: white;
  border: 1px solid #ccc;
}

.unit .xxk.cur::before {
  content: '';
  position: absolute;
  width: 100%;
  height: 10px;
  background-color: white;
  bottom: -10px;
  left: -1px;
  border: 1px solid #ccc;
  border-top: none;
  border-bottom: none;
}

.menu {
  position: fixed;
  top: 41px;
  left: 0px;
  width: 100%;
  height: 100%;
  z-index: 99;
}

.menu .mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  z-index: 1;
}

.menu .menu_inner_box {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  min-height: 400px;
  background: #fff;
  z-index: 2;
}



.the_temp {
  display: flex;
  padding: 10px;
}

.picbox {
  width: 160px;
  height: 100px;
}

.picbox image {
  width: 160px;
  height: 100px;
}

.contentbox {
  flex: 1;
  font-size: 14px;
  color: #555;
  padding-left: 10px;
}

.contentbox .ppcx {
  font-size: 16px;
  font-weight: bold;
  overflow: hidden;
  color: #333;

}
.contentbox .price{
  font-size: 18px;
  color: red;
  font-weight: bold;
  line-height: 20px;
}