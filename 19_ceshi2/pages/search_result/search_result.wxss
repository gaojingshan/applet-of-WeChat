.topbox {
  height: 60px;
  border-bottom: 1px solid #ccc;
}

.topbox .row {
  height: 30px;
}

.topbox .row .sx_btn {
  float: right;
  margin: 4px;
  border: 1px solid #ccc;
  padding: 2px 4px;
  box-sizing: border-box;
  font-size: 14px;
}

.topbox .row .unit {
  margin-left: 20px;
}

.topbox .row .unit .xxk {
  float: left;
  padding: 2px 14px;
  padding-right: 20px;
  font-size: 12px;
  background: #eee url(data:image/png;base64,);
  background-size: 10px 10px;
  background-position: 94% center;
  background-repeat: no-repeat;
  margin-right: 10px;
}

.topbox .row .unit .xxk.cur {
  border: 1px solid #ccc;
  background-color: white;
  position: relative;
}

.topbox .row .unit .xxk.cur::before {
  content: '';
  bottom: -10px;
  left: -1px;
  width: 100%;
  height: 10px;
  background-color: white;
  border: 1px solid #ccc;
  border-top: none;
  border-bottom: none;
  position: absolute;
}

.topbox .menu {
  position: fixed;
  top: 61px;
  left: 0px;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 99;
}
.topbox .menu .menu_inner{
  width: 100%;
  height: 300px;
  background-color: white;
}

.the_temp {
  display: flex;
  padding: 10px;
}

.picbox {
  width: 160px;
  height: 100px;
}

.picbox image {
  width: 160px;
  height: 100px;
}

.contentbox {
  flex: 1;
}

.contentbox .text {
  font-size: 14px;
  color: #333;
}