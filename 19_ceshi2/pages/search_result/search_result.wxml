<view>
	<view class="topbox">
		<view class="row">
			<view class="sx_btn" bindtap="showDrawer" size="small">筛选</view>
		</view>
		<view class="row">
			<scroll-view scroll-x="true">
				<view class="unit">
					<view class="xxk {{nowmenu == item.e ? 'cur' : ''}}" wx:for="{{filters}}" wx:key="index" bindtap="xxk_click_han" data-e="{{item.e}}">{{item.c}}</view>
				</view>
			</scroll-view>
		</view>
		<wxs src="tool.wxs" module="tool" />
		<view class="menu" wx:if="{{nowmenu}}">
			<view class="mask" catchtap="close_Han"></view>
			<view class="menu_inner">
				<menu-inner nowmenu="{{nowmenu}}" nowv="{{now[nowmenu]}}" nowo="{{tool.theOneItemInArray(filters,nowmenu)}}" bind:reset="resetHan" bind:ok="menuokHan"></menu-inner>
			</view>
		</view>


		<i-drawer mode="right" visible="{{isShowDrawer}}" bind:close="onClose">
			<view style="height:{{windowHeight}}px;background:white;width:290px">
				<!-- 加wx:if的目的是为了让组件能够消亡，这样组件data会被重置 -->
				<drawer-inner wx:if="{{isShowDrawer}}" bind:ok="drawer_inner_okHan" bind:close="drawer_inner_close_han" filters="{{filters}}" brand="{{now.brand}}" color="{{now.color}}" fuel="{{now.fuel}}" exhaust="{{now.exhaust}}" engine="{{now.engine}}"></drawer-inner>
			</view>
		</i-drawer>
	</view>
	<!-- 定义汽车小格的模板 -->
	<template name="the_temp">
		<view class="the_temp">
			<view class="picbox">
				<image src="http://aiqianduan.com:56506/images/carimages_small/{{item.id}}/view/{{item.img}}"></image>
			</view>
			<view class="contentbox">
				<view class="text">【id】{{item.id}}</view>
				<view class="text">【品牌】{{item.brand}}</view>
				<view class="text">【价格】{{item.price}}</view>
				<view class="text">【颜色】{{item.color}}【排放】{{item.exhaust}}</view>
				<view class="text">【燃油】{{item.fuel}}</view>
				<view class="text">【动力】{{item.engine}}</view>
			</view>
		</view>
	</template>
	<scroll-view scroll-y="true" style="height:{{windowHeight-61}}px" bindscrolltolower="lowerHandler" lower-threshold="140">
		<template wx:for="{{results}}" wx:key="id" is="the_temp" data="{{item:item}}"></template>
		<view style="font-size:12px;text-align:center;color:#ccc">我是有底线滴</view>
	</scroll-view>
</view>