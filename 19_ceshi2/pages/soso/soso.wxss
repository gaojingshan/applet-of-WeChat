.top{
    display: flex;
    padding: 10px 20px;
}
.top .topbox{
    flex: 1;
    width: 100%;
    height: 30px;
    background-color: #eee;
    border-radius: 20px;
    position: relative;
    line-height: 30px;
    font-size: 14px;
    padding-left: 40px;
    box-sizing: border-box;
}
.top .topbox input{
    line-height: 30px;
    height: 30px;
}

.topbox  .fdj{
    width: 20px;
    height: 20px;
    position: absolute;
    top: 5px;
    left: 5px; 
}
.top .cancel{
    width: 50px;
    line-height: 30px;
    height: 30px;
    font-size: 14px;
    padding-left: 20px;
    box-sizing: border-box;

}
.lsss_box{
    padding: 10px 20px;
    font-size: 13px;
}
.lsss{
    overflow: hidden;
}
.lsss_box .ljt{
    width: 20px;
    height: 20px;
}
.lsss_box .ljt image{
    width: 20px;
    height: 20px;
}
.lsss_text{
    float: left;
}
.ljt{
    float: right;
}
.storage{
    float: left;
    padding: 4px 6px;
    background: #eee;
    font-size: 14px;
    margin-top: 10px;
    margin-right: 10px;
    border-radius: 20px;
}