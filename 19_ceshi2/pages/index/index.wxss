Page{
    background: #eee;
}
.top {
    height: 190px;
    background: -webkit-linear-gradient(top, rgb(207, 22, 22), rgb(212, 79, 79));
    padding-top: 30px;
    box-sizing: border-box;
}

.top .pic {
    width: 120px;
    height: 77.4px;
    margin: 0 auto;
    display: block;
}

.topbox {
    height: 30px;
    padding: 6px 16px;
}

.topbox .kuang {
    width: 100%;
    height: 100%;
    background-color: #eee;
    border-radius: 200px;
    position: relative;
    padding: 5px 40px;
    box-sizing: border-box;
    font-size: 14px;
}

.topbox .kuang .fdj {
    width: 20px;
    height: 20px;
    position: absolute;
    top: 5px;
    left: 4px;
}

.scrollview_unit {
    display: flex;
}


.scrollview_unit .scrollview {
    height: 35px;
    flex: 1;
    overflow: hidden;
}

.scrollview_unit .scrollview .unit {
    width: 3000px;
    margin-top: 10px;
}

.scrollview_unit .scrollview .xxk {
    float: left;
    height: 24px;
    margin-right: 20px;
    color: white;
    font-size: 14px;
    position: relative;
}

.scrollview_unit .scrollview .xxk.cur::before {
    content: '';
    width: 3px;
    height: 3px;
    background: white;
    position: absolute;
    bottom: 0;
    left: 0;
}

.scrollview_unit .scrollview .xxk.cur::after {
    content: '';
    width: 100%;
    height: 3px;
    background: -webkit-linear-gradient(left, rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0.2));
    position: absolute;
    bottom: 0;
    left: 0;
}

.scrollview_unit .sjx {
    width: 30px;
    height: 30px;
    /* background: orange; */
}
.showLoading{
    text-align: center;
    font-size: 14px;
    color: #333;
}
