<view>
	<scroll-view scroll-y="true" style="height:{{windowHeight - 51 }}px">
		<view style="padding:10px;font-size:14px;font-weight:bold">{{nowc}}的全部选项</view>
		<view>
			<i-checkbox-group current="{{current}}" bindchange="handleFruitChange">
				<i-checkbox wx:for="{{nowoptions}}" position="left" wx:key="index" value="{{item}}">
				</i-checkbox>
			</i-checkbox-group>
		</view>
	</scroll-view>
	<view class="bottom_btn">
		<view class="btn1">取消</view>
		<view class="btn2" bindtap="allbrand_okHan">确定</view>
	</view>
</view>