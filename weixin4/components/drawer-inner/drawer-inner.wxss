.container {
    padding: 10px;
}

.header {
    overflow: hidden;
    font-size: 13px;
    border-bottom: 1px solid #ccc;
    line-height: 20px;
}

.header .view1 {
    float: left;
}

.header .view2 {
    float: right;
}

.xxk {
    float: left;
    width: 33.3%;
    border-right: 10px solid white;
    box-sizing: border-box;
    background-color: #eee;
    margin: 10px 0 0;
    line-height: 32px;
    text-align: center;
    font-size: 14x;
    border-radius: 4px;
}
.xxk.cur{
    background-color: yellow;
}

.xxk:nth-child(3n) {
    border-right: none;
}
.xxk.xxk0{
    background-color: white;
    border: 1px solid #ccc;
}

.footer {
    display: flex;
    width: 100%;
    height: 40px;
    border-top: 1px solid #ccc;
}

.footer .btn:nth-of-type(1) {
    flex: 1;
    border-right: 1px solid #ccc;
}

.footer .btn {
    flex: 3;
    height: 40px;
    line-height: 40px;
    text-align: center;
}

.footer .btn:last-child {
    background-color: orange;
}