.sx_grid {
    padding: 10px;
}

.sx_grid .title {
    font-size: 18px;
    line-height: 26px;
    border-bottom: 1px solid #ccc;
}

.sx_grid .content {
    padding-top: 10px;
}

.sx_grid .content .btn {
    float: left;
    box-sizing: border-box;
    width: 33.33%;
    height: 36px;
    line-height: 36px;
    background: #eee;
    border-right: 6px solid white;
    margin-bottom: 10px;
    text-align: center;
    border-radius: 4px;
    font-size: 14px;
}

.sx_grid .content .btn:nth-child(3n) {
    border-right: none;
}

.sx_grid .content .btn.all {
    border: 1px solid #eee;
    background: white;
}

.bottom_box {
    width: 100%;
    height: 50px;
    border-top: 1px solid #ccc;
    display: flex;
}

.bottom_box .btn1 {
    height: 50px;
    flex: 1;
    text-align: center;
    line-height: 50px;
}

.bottom_box .btn2 {
    height: 50px;
    flex: 1;
    text-align: center;
    line-height: 50px;
    background: orange;
}