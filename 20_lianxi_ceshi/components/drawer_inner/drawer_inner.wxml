<view>
	<view wx:if="{{nowshow == 'main'}}">
		<scroll-view scroll-y="true" style="height:{{windowHeight-51}}px">
			<view class="sx_grid">
				<view class="title" style="overflow:hidden">
					<view style="float:left">品牌</view>
					<view style="float:right;font-size:13px">当前：{{brand}}</view>
				</view>
				<view class="content">
					<view bindtap="pphan" wx:for="{{['宝马','奔驰','奥迪','本田','日产']}}" wx:key="index" data-brand="{{item}}" class="btn {{item == brand ? 'cur' : ''}}">{{item}}</view>

					<view class="btn all" bindtap="showallbrand">查看全部</view>
				</view>
			</view>
			<!-- 循环 -->
			<view class="sx_grid" wx:for="{{filters}}" wx:key="e" wx:for-item="lm">
				<view class="title" style="overflow:hidden">
					<view style="float:left">{{lm.c}}
						<text style="font-size:14px">(可多选)</text>
					</view>
					<view style="float:right;font-size:13px">当前：{{now[lm.e]}}</view>
				</view>
				<view class="content">
					<wxs src="tool.wxs" module="tool"></wxs>
					<view wx:for-item="xx" bindtap="ppphan" wx:for="{{lm.options.length > 5 ? tool.slice(lm.options,0,5) : lm.options}}" wx:key="index" data-k="{{lm.e}}" data-v="{{xx}}" class="btn {{tool.checkInArr(now[lm.e],xx) ? 'cur' : ''}}">{{xx}}</view>
					<view class="btn all" bindtap="showalloption" data-e="{{lm.e}}" data-options="{{lm.options}}" data-c="{{lm.c}}" wx:if="{{lm.options.length > 5}}">查看全部</view>
				</view>
			</view>
		</scroll-view>
		<view class="bottom_box">
			<view class="btn0" bindtap="closeBtnHan">×</view>
			<view class="btn1" bindtap="resetBtnHan">重置</view>
			<view class="btn2" bindtap="okHan">确定</view>
		</view>
	</view>

	<!-- 全部品牌组件 -->
	<all_brand wx:if="{{nowshow == 'allbrand'}}" bind:ok="all_brand_okHan"></all_brand>

	<!-- 全部选项,除了品牌 -->
	<!-- nowcurrent -->
	<show-all wx:if="{{nowshow == 'showall'}}" nowc="{{nowc}}" nowoptions="{{nowoptions}}" nowe="{{nowe}}" bind:ok="okHan2" ></show-all>

</view>