<view>
	<view class="topbox">
		<i-button class="sx_btn" size="small" bind:click="ShowDrawer">筛选</i-button>
		<i-drawer visible="{{ isShowDrawer }}" bind:close="onClose" mode="right">
			<view style="height: {{windowHeight}}px;width:290px;background:white">
				<drawer_inner wx:if="{{isShowDrawer}}" bind:ok="draw_inner_han" brand="{{brand}}" bind:close="closeHan" filters = "{{filters}}"></drawer_inner>
			</view>
		</i-drawer>
	</view>
	<!-- 定义汽车小格的模板 -->
	<template name="car_grid">
		<view class="car_grid">
			<view class="pic_box">
				<image class="carpic" src="http://aiqianduan.com:7897/images/carimages_small/{{item.id}}/view/{{item.img}}"></image>
			</view>
			<view class="word_box">
				<view>【id】{{item.id}}</view>
				<view>【品牌】{{item.brand}}</view>
				<view>【颜色】{{item.color}}</view>
				<view>【价格】{{item.price}}</view>
				<view>【排放】{{item.exhaust}}</view>
				<view>【燃油】{{item.fuel}}</view>
				<view>【动力】{{item.engine}}</view>
			</view>
		</view>
	</template>
	<scroll-view scroll-y="true" style="height:{{windowHeight-61}}px" bindscrolltolower="lowerHandler" lower-threshold="{{140}}">
		<template is="car_grid" wx:for="{{results}}" wx:key="id" data="{{item:item}}"></template>
		<view style="text-align:center">到底了，没有更多了</view>
	</scroll-view>
</view>