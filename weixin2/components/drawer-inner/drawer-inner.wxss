.bottom_box {
    width: 100%;
    height: 50px;
    border-top: 1px solid #ccc;
    display: flex;
}

.bottom_box .btn0 {
    flex: 1;
    border-right: 1px solid #ccc;
}

.bottom_box .btn1,
.bottom_box .btn2 {
    flex: 3;
}

.bottom_box .btn0,.bottom_box .btn1,
.bottom_box .btn2 {
    height: 50px;
    text-align: center;
    line-height: 50px;
}

.bottom_box .btn2 {
    background: orange;
}

.sx_grid {
    padding: 10px;
}

.sx_grid .title {
    font-size: 18px;
    line-height: 26px;
    border-bottom: 1px solid #ccc;
}

.sx_grid .content {
    padding-top: 10px;
    overflow: hidden;
}

.sx_grid .content .btn {
    float: left;
    box-sizing: border-box;
    width: 33.33%;
    height: 33px;
    background: #eee;
    border-right: 6px solid white;
    margin-bottom: 10px;
    text-align: center;
    line-height: 33px;
    border-radius: 4px;
    font-size: 14px;
}

.sx_grid .content .btn:nth-child(3n) {
    border-right: none;

}

.sx_grid .content .btn.btn_all {
    background: white;
    border: 1px solid #ccc;
}

.sx_grid .content .btn.cur {
    background: yellow;
}
.picker{
    border: 1px solid #eee;
    padding: 2px;
    margin: 4px 0;
    font-size: 12px;
    background: #eee;
    text-align: center;
}
.gmrq{
    display: flex;
    font-size: 12px;
}
.gmrq .p1{
    flex: 1;
    margin-right: 6px;
}
.gmrq .p2{
    flex: 1;
}
.sx_grid .clear_gmrq{
    width: 100px;
    font-size: 12px;
    text-align: center;
    border: 1px solid #ccc;
    margin-top: 10px;
    padding: 4px 0;
}