.topstatusbar{
  background-image: -webkit-linear-gradient(top, rgb(226, 24, 24), rgb(238, 62, 62));
}
.top {
  display: flex;
}

.top .topbox {
  flex: 1;
}

.topbox {
  height: 30px;
  padding: 6px 16px;
}

.topbox .kuang {
  width: 100%;
  height: 100%;
  background: #eee;
  border-radius: 200px;
  position: relative;
  box-sizing: border-box;
  padding: 4px 40px;
  font-size: 14px;
}

.topbox .kuang .fdj {
  width: 20px;
  height: 20px;
  position: absolute;
  top: 4px;
  left: 4px;
}

.top .cancelbtn {
  width: 40px;
  padding-top: 10px;
  font-size: 14px;
}
.lsss_box{
  padding: 10px;
}
.lsss_box .hd{
  overflow: hidden;
}
.lsss_box .lsss{
  float: left;
  font-size: 13px;
}
.lsss_box .ljt{
  float: right;
}
.lsss_box .ljt image{
  width: 20px;
  height: 20px;
}
.lishiword{
  float: left;
  padding: 4px 6px;
  background: #eee;
  margin-right: 10px;
  border-radius: 10px;
  font-size: 14px;
  margin-top: 10px;
}