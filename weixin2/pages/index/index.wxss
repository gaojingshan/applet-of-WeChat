Page {
  background: #eee;
}

.topstatusbar {
  box-sizing: border-box;
  padding-top: 30px;
  width: 750rpx;
  height: 170px;
  background-image: -webkit-linear-gradient(top, rgb(226, 24, 24), rgb(238, 62, 62));
  border-bottom: none;
}

.topstatusbar .logo {
  width: 120px;
  height: 50px;
  margin: 0 auto;
  display: block;
}

.topstatusbar .kuang_box {
  padding: 4px 10px;
}

.topstatusbar .kuang {
  width: 100%;
  height: 100%;
  background: #eee;
  border-radius: 200px;
  position: relative;
  box-sizing: border-box;
  padding: 4px 40px;
  font-size: 12px;
}

.topstatusbar .kuang .fdj {
  width: 20px;
  height: 20px;
  position: absolute;
  top: 4px;
  left: 4px;
}

.topstatusbar .xscrollviewbox {
  display: flex;
  height: 40px;
}

.topstatusbar .xscrollviewbox .scrollview {
  flex: 1;
  overflow: hidden;
  padding-top: 10px;
  height: 40px;
  margin-left: 10px;
}

.topstatusbar .xscrollviewbox .xunit {
  width: 1000px;
  height: 40px;
}

.topstatusbar .xscrollviewbox .xxk {
  float: left;
  margin-right: 20px;
  color: white;
  position: relative;
  height: 26px;
  font-size: 14px;
}


.topstatusbar .xscrollviewbox .xxk.cur::before {
  content: '';
  position: absolute;
  width: 3px;
  height: 3px;
  background: white;
  bottom: 0;
  left: 0;
}

.topstatusbar .xscrollviewbox .xxk.cur::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 3px;
  background: -webkit-linear-gradient(left, rgba(255, 255, 255, .5), rgba(255, 255, 255, .2));
  bottom: 0;
  left: 0;
}

.topstatusbar .xscrollviewbox .sjx {
  width: 30px;
  height: 30px;
  background: orange;
}

.xlm {
  background: #eee;
  padding: 10px;
}

.tuijian {
  width: 100%;
  background: #fff;
  border-radius: 10px;
  padding-top: 6px;
  padding-bottom: 6px;
}

.loadingtext {
  text-align: center;
  line-height: 40px;
}

.tuijian .row {
  display: flex;
  width: 100%;
  padding-top: 10px;
  overflow: hidden;
}

.tuijian .row .grid {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  height: 100px;
}

.tuijian .row .grid .pic {
  width: 90%;
}

.tuijian .row .grid .pic image {
  width: 100rpx;
  height: 100rpx;
}

.tuijian .row .grid .word {
  font-size: 13px;
  color: #333;
}

.pbl {
  display: flex;
  padding: 10px;
}

.pbl .left {
  flex: 1;
}

.pbl .right {
  flex: 1;
  margin-left: 10px;
}

.pbl .grid {
  background: white;
  border-radius: 6px;
  margin-bottom: 10px;
}

.pbl .grid .pic {
  /* 去掉白边，设置垂直居中（它只能用于表格垂直居中） */
  vertical-align: middle;
}

.pbl .grid .content {
  padding: 5px;
  font-size: 14px;
}

.pbl .grid .content .price {
  font-size: 26px;
  color: orange;
}

/* 首页轮播图 */
.myswiper {
  padding-top: 6px;
  border-radius: 10px;
  overflow: hidden;
}

.myswiper image {
  border-radius: 10px;
  overflow: hidden;
}

.circle_bg {
  position: absolute;
  top: 0;
  left: -25%;
  width: 150%;
  height: 100px;
  background: -webkit-linear-gradient(top, rgb(238, 62, 62), rgb(219, 106, 106));
  z-index: -1;
  border-bottom-left-radius: 100%;
  border-bottom-right-radius: 100%;
}

/* 首页icons */
.icons{
  padding-top: 10px;
}
.icons .row {
  display: flex;
}

.icons .row .grid {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icons .row .grid image {
  width: 110rpx;
  height: 110rpx;
}

/* 首页热卖商品 */
.hotprobox {
  width: 670rpx;
  margin: 10px auto;
  background: white;
}

.hotprobox .row {
  display: flex;
}

.hotprobox .row .grid {
  position: relative;
  flex: 1;
}
.hotprobox .row .grid.first{
  border-right: 1px solid #eee;
}
.hotprobox .row .grid .title{
  font-size: 16px;
  font-weight: bold;
  padding-left: 12px;
  padding-top: 10px;
}
.hotprobox .row .grid .info{
  font-size: 12px;
  padding-left: 12px;
  padding-top: 4px
}

.hotprobox .row .grid .pbox{
  display: flex;
}
.hotprobox .row .grid .pbox .pgrid{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.hotprobox .row .grid .pbox .pgrid image{
  width: 160rpx;
  height: 160rpx;
}
.hotprobox .row .grid .pbox .pgrid .price{
  color: orangered;
}
.hotprobox .row .grid .countdown{
  position: absolute;
  right: 0px;
  top: 10px;
}
.hotprobox .row .grid .countdown .sj{
  background: orange;
  border-radius: 5px;
  margin: 0 1px;
  font-size: 14px;
  font-weight: bold;
}
.hotprobox .row2{
  border-top: 1px solid #eee;
}