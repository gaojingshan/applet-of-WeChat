.top {
    display: flex;
    background: #1AAC19;
    color: white;
    padding: 10px 0;
}

.top .top_l {
    flex: 1;
    text-align: center;
}
.top .top_l .bmi text{
    position: relative;
    top: -4px;
    font-size: 10px;
    border: 1px solid #fff;
    width: 16px;
    height: 16px;
    line-height: 16px;
    display: inline-block;
    border-radius: 50%;
    font-weight: bold;
}
.top .top_r {
    flex: 1;
    text-align: center;
}

.top .txt {
    font-size: 24px;
    line-height: 40px;
}

.top .txt text {
    font-size: 14px;
}

/* 测量信息 */
.cl {
    margin-left: 10px;
}

.cl_all {
    border-bottom: 1px solid #ccc;
    display: flex;
    line-height: 40px;
}

.cl_all.pick .view1 {
    flex: 1;
}

.cl_all.pick .view2 {
    flex: 1;
    text-align: right;
    padding-right: 40px;
    position: relative;
    color: #999999;
}
.cl_all.pick .view2 text{
    position: absolute;
    font-family: 'consolas';
    padding-left: 4px;
}

.cl_all.input .view1 {
    flex: 1;
}

.cl_all.input .view2 {
    flex: 2;
    text-align: right;
    padding-right: 40px;
    display: flex;
}

.cl_all.input .view2 input {
    text-align: left;
    flex: 4;
   margin-top: 10px;
}

.cl_all.input .view2 text {
    text-align: right;
    flex: 1;
    color: #999999;
}