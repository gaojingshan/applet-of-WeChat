.topstatusbar {
    height: 90px;
    width: 100%;
    border-bottom: 1px solid #eee;
    background-image: -webkit-linear-gradient(top, rgb(207, 22, 22), rgb(212, 79, 79));
    position: relative;

}

.topstatusbar .backbox {
    position: absolute;
    line-height: 30px;
    color: white;
    bottom: 10px;
    left: 40px;
}

.topstatusbar .arrowlift {
    width: 30px;
    height: 30px;
    position: absolute;
    top: 0px;
    left: -30px;
}