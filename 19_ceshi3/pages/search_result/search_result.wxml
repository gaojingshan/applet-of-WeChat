<view>
	<view class="sx">
		<i-button class="sx_btn" bind:click="openClick" size="small">筛选</i-button>
		<i-drawer mode="right" visible="{{showDrawer}}" bind:close="closeClick">
			<view style="width:290px;height:{{windowHeight}}px;background:white">
				<drawer-inner bind:ok="drawer_inner_han" filters="{{filters}}" bind:close="close_han" wx:if="{{showDrawer}}"></drawer-inner>
			</view>
		</i-drawer>
	</view>
	<scroll-view scroll-y="true" style="height:{{windowHeight-61}}px" bindscrolltolower="scrolltolower" lower-threshold="140">
		<template name="the_grid">
			<view class="the_grid">
				<view class="picbox">
					<image src="http://aiqianduan.com:56506/images/carimages_small/{{item.id}}/view/{{item.img}}"></image>
				</view>
				<view class="contentbox">
					<view class="text">【id】{{item.id}}</view>
					<view class="text">【品牌】{{item.brand}}</view>
					<view class="text">【价格】{{item.price}}</view>
					<view class="text">【颜色】{{item.color}}【排放】{{item.exhaust}}</view>
					<view class="text">【燃油】{{item.fuel}}</view>
					<view class="text">【动力】{{item.engine}}</view>
				</view>
			</view>
		</template>
		<template wx:for="{{results}}" wx:key="id" is="the_grid" data="{{item:item}}"></template>
		<view style="font-size:14px;text-align:center;line-height:28px;color:#ccc">我也是有底线滴</view>
	</scroll-view>
</view>