.page {
    padding: 10px;
}

.pinpai {
    font-size: 18px;
    border-bottom: 1px solid #ccc;
    line-height: 30px;
    margin-bottom: 10px;
}

.page .box .brand {
    float: left;
    width: 33.33%;
    background-color: #eee;
    font-size: 14px;
    line-height: 30px;
    border-right: 10px solid white;
    box-sizing: border-box;
    text-align: center;
    margin-bottom: 10px;
}

.page .box .brand:nth-child(3n) {
    border-right: none;
}

.page .box .brand.allbrand {
    background-color: white;
    border: 1px solid #eee;
}
.page .box .brand.cur{
    background-color: yellow;
}

.bottom {
    display: flex;
    height: 50px;
    border-top: 1px solid #ccc;
}

.bottom_left {
    flex: 1;
    font-size: 14px;
    line-height: 50px;
    height: 50px;
    text-align: center;
}

.bottom_right {
    flex: 1;
    font-size: 14px;
    line-height: 50px;
    height: 50px;
    text-align: center;
    background-color: orange;
}