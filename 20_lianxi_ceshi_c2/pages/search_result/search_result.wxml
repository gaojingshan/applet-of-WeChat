<view class="page">
	<view class="top">
		<van-button class="btn" size="small" bind:click="showPopup">筛选</van-button>
        <van-popup show="{{ isShow }}" bind:close="onClose" position="right">
            <view class="content" style="height:{{windowHeight}}px">
                <drawer_inner bind:ok="handle_sx"></drawer_inner>
            </view>
        </van-popup>
	</view>
	<scroll-view scroll-y="true" style="height: {{windowHeight-71}}px" bindscrolltolower="scrolltolower" lower-threshold="140">
		<template name="the_temp">
			<view class="the_temp">
				<view class="pic_box">
					<image src="http://aiqianduan.com:7897/images/carimages_small/{{item.id}}/view/{{item.img}}"></image>
				</view>
				<view class="word_box">
					<view class="text">【id】{{item.id}}</view>
					<view class="text">【品牌】{{item.brand}}</view>
					<view class="text">【颜色】{{item.color}}</view>
					<view class="text">【价格】{{item.price}}</view>
					<view class="text">【排放】{{item.exhaust}}</view>
				</view>
			</view>
		</template>
		<template wx:for="{{results}}" wx:key="index" is="the_temp" data="{{item:item}}"></template>
		<view style="font-size:12px;text-align:center">我是有底线的</view>
	</scroll-view>
</view>